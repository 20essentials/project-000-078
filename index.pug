doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title 3D ROATING SQUARE
    link(rel="shortcut icon", href="assets/favicon.png", type="image/x-icon")
    style.
      *,
      *::after,
      *::before {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
          Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
          sans-serif;
      }

      body {
        min-height: 100dvh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: linear-gradient(90deg, #43cea2, #185a9d);
        perspective: 600px;
        transform-style: preserve-3d;
      }

      .container-square {
        --size: 200px;
        width: var(--size);
        height: var(--size);
        position: relative;
        background-color: transparent;
      }

      .container-square * {
        pointer-events: none;
      }

      .container-square .square {
        position: absolute;
        border: 10px solid #262626;
        border-radius: 4px;
        inset: var(--inset);
        animation: rotarY var(--duration) linear infinite;
      }

      .container-square .square::before {
        content: '';
        display: block;
        width: 10px;
        height: 50%;
        background-color: springgreen;
        position: absolute;
        left: -10px;
        top: -10px;
      }

      .container-square .square::after {
        content: '';
        display: block;
        width: 10px;
        height: 50%;
        background-color: springgreen;
        position: absolute;
        bottom: -10px;
        right: -10px;
      }

      .container-square.rotate-in-x .square {
        animation: rotarX var(--duration) linear infinite;
      }

      @keyframes rotarY {
        0% {
          transform: rotateY(0deg);
        }

        100% {
          transform: rotateY(360deg);
        }
      }

      @keyframes rotarX {
        0% {
          transform: rotateX(0deg);
        }

        100% {
          transform: rotateX(360deg);
        }
      }

      @media (width <=1111px) {
        .container-square {
          --size: 150px;
        }
      }
  body
    .container-square
      aside.square(style="--inset: -20px; --duration: 16s")
      aside.square(style="--inset: 0px; --duration: 8s")
      aside.square(style="--inset: 20px; --duration: 4s")
      aside.square(style="--inset: 40px; --duration: 2s")
      aside.square(style="--inset: 60px; --duration: 1s")
    script(src="script.js")
